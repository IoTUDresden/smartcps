<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="9dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle" >
          
            <stroke
                android:width="@dimen/borderWidth"
                android:color="@color/clShapeBorderLight" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <gradient
                android:angle="90"
                android:endColor="#E2E2E2"
                android:startColor="#BABABA" />

            <corners
                android:bottomLeftRadius="9dp"
                android:bottomRightRadius="9dp"
                android:topLeftRadius="9dp"
                android:topRightRadius="9dp" />
        </shape>
    </item>

</layer-list>