<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="eu.vicci.ecosystem.standalone.controlcenter.android.activities.DashboardDeviceDetailActivity" >

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="0.5"
       android:orientation="vertical"
       android:paddingLeft="@dimen/appTitle" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding"
            android:text="@string/deviceDetail_deviceName" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding"
            android:text="@string/deviceDetail_deviceLocation" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
                
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/content_padding"
             android:text="@string/deviceDetail_deviceMaxValue" />

        <TextView
            android:id="@+id/boundary_max_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding"
            android:text="@string/deviceDetail_deviceMinValue" />

        <TextView
            android:id="@+id/boundary_min_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding"
            android:text="@string/deviceDetail_deviceIdealMax" />

        <TextView
            android:id="@+id/ideal_max_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding"
            android:text="@string/deviceDetail_deviceIdealMin" />

        <TextView
            android:id="@+id/ideal_min_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/appTitle"
        android:paddingRight="@dimen/appTitle"
        android:paddingTop="@dimen/appTitle" >

           <FrameLayout
               android:id="@+id/sensor_view_map"
               android:layout_width="match_parent"
               android:layout_height="match_parent" 
               android:layout_weight="0.6"/>
           
           <FrameLayout
               android:id="@+id/sensor_view_chart"
               android:layout_width="match_parent"
               android:layout_height="match_parent" 
               android:layout_weight="0.6"/>
       
    </LinearLayout>

</LinearLayout>