<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_entry"
    android:layout_width="wrap_content"
    android:paddingBottom="10dp"
    android:layout_height="58dp">
	
     <!-- Icon of the map -->
    <ImageView
        android:id="@+id/map_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_map"
        android:contentDescription="@string/robot_list_item_icon" >
    </ImageView>
	
     <!-- Name of the map -->
    <TextView
        android:id="@+id/context_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="@string/map_list_item_name"
        android:textColor="@color/list_item_text_grey"
        android:textSize="20sp" 
        android:layout_toRightOf="@id/map_icon">
    </TextView>
         
    <!-- Edit Button -->
    <ImageButton
        android:id="@+id/map_edit_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/map_list_item_edit"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_edit"
        android:layout_alignParentRight="true"/>

</RelativeLayout>