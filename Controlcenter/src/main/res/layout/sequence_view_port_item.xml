<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_unfocused"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp" >

    <TextView
        android:id="@+id/properties_port_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="placeholder"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/properties_port_name"
        android:layout_below="@+id/properties_port_name" >

        <TextView
            android:id="@+id/process_item_type_label"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/process_label_type"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/properties_port_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1" >

        <TextView
            android:id="@+id/process_item_value_label"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/process_label_value"
            android:textColor="@android:color/black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/properties_port_value"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>